<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="280.0" style="-fx-background-color: #d7d7d9;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.todolist.sceneController.ToDoDetailController">
   <children>
      <Label layoutX="14.0" layoutY="14.0" text="To Do Name">
         <font>
            <Font name="Tahoma" size="14.0" />
         </font>
      </Label>
      <TextField fx:id="field_toDoName" layoutX="14.0" layoutY="41.0" promptText="Name" />
      <Label layoutX="14.0" layoutY="77.0" text="To Do Description">
         <font>
            <Font name="Tahoma" size="14.0" />
         </font>
      </Label>
      <TextArea fx:id="field_toDoDesc" layoutX="14.0" layoutY="102.0" prefHeight="150.0" prefWidth="250.0" promptText="Description..." />
      <Label layoutX="14.0" layoutY="271.0" text="From">
         <font>
            <Font name="Tahoma" size="14.0" />
         </font>
      </Label>
      <DatePicker fx:id="date_from" layoutX="88.0" layoutY="268.0" promptText="mm/dd/yyyy" />
      <Label layoutX="14.0" layoutY="311.0" text="To">
         <font>
            <Font name="Tahoma" size="14.0" />
         </font>
      </Label>
      <DatePicker fx:id="date_to" layoutX="88.0" layoutY="306.0" promptText="mm/dd/yyyy" />
      <Button fx:id="button_save" layoutX="116.0" layoutY="362.0" mnemonicParsing="false" onAction="#saveToDo" stylesheets="@style.css" text="SAVE" textFill="WHITE">
         <font>
            <Font name="Tahoma Bold" size="12.0" />
         </font></Button>
   </children>
</AnchorPane>
